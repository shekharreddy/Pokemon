<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_name"
        style="@style/HeaderTextExtraLargeBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_margin"
        android:layout_marginStart="@dimen/screen_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Title" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pokemon_image"
        android:layout_width="@dimen/detail_image_width_height"
        android:layout_height="@dimen/detail_image_width_height"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_stats_header"
        style="@style/HeaderTextMediumBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats_title"
        android:layout_marginTop="@dimen/screen_margin"
        android:layout_marginStart="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
        app:layout_constraintStart_toStartOf="parent" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_stats"
        style="@style/HeaderTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_stats_header"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_abilities_header"
        style="@style/HeaderTextMediumBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abilities_title"
        android:layout_marginTop="@dimen/screen_margin"
        android:layout_marginStart="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_stats"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pokemon_abilities"
        style="@style/HeaderTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_margin"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_abilities_header"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Title" />
</androidx.constraintlayout.widget.ConstraintLayout>